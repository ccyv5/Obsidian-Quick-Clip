{
  "manifest_version": 3,
  "name": "Obsidian Quick Clip",
  "version": "1.0.0",
  "description": "快速保存网页片段到Obsidian笔记 | Quick save web snippets to Obsidian",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
